{
  "name": "IhCartFeedbackTheme",
  "author": "Shopware AG",
  "views": [
     "@Storefront",
     "@Plugins",
     "@IhCartFeedbackTheme"
  ],
  "style": [
    "app/storefront/src/scss/overrides.scss",
    "@Storefront",
    "app/storefront/src/scss/base.scss"
  ],
  "script": [
    "@Storefront",
    "app/storefront/dist/storefront/js/ih-cart-feedback-theme.js"
  ],
  "asset": [
    "@Storefront",
    "app/storefront/src/assets"
  ],
  "config": {
    "fields": {
      "color-cart-feedback": {
        "label": {
          "en-GB": "Cart Feedback Color",
          "de-DE": "Warenkorb Feedback Farbe"
        },
        "type": "color",
        "value": "#d56c20",
        "editable": true,
        "block": "cartFeedback"
      }
    },
    "blocks": {
      "cartFeedback": {
        "label": {
          "en-GB": "Cart Feedback",
          "de-DE": "Warenkorb Feedback"
        }
      }
    }
  }  
}